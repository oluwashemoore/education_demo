@model web_demo.Entities.Attendance

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Attendance</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToLongDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.School)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject.Name)
        </dd>
    </dl>

    <table class="table">
        <thead>
            <tr>
                <th>
                   Student Name
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AttendanceDetails)
            {
            <tr>
                <td>
                    @item.Student.FirstName @item.Student.LastName
                </td>
                <td>
                    @{
                        string status = item.Status ? "Present" : "Absent";
                    }
                    @status
                </td>
                <td>
                    @item.Reason
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
