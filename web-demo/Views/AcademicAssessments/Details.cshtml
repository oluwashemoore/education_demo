@model web_demo.Entities.AcademicAssessment

@{
    ViewData["Title"] = "Details";
}

<h1></h1>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.School)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssessmentDate)
        </dt>
        <dd class="col-sm-10">
            @Model.AssessmentDate.ToLongDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicPeriod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicPeriod.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssessmentType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssessmentType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaximumScore)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaximumScore)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Student Name
            </th>
            <th>
                Score
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AcademicAssessmentDetails)
        {
            <tr>
                <td>
                    @item.Student.FirstName @item.Student.LastName
                </td>
                <td>
                    
                    @item.Score
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
